{% extends 'templates/admin_default.html.twig' %}

{% block content %}
    <table class="table">
        <thead class="thead-dark">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Birth</th>
            <th scope="col">Email</th>
            <th scope="col">Country</th>
            <th scope="col">City</th>
            <th scope="col">Registration</th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody id="file_list">
        {% for user in users %}
            <tr>
                <td>{{ user.front_id }}</td>
                <td>{{ user.first_name }}</td>
                <td>{{ user.last_name }}</td>
                <td>{{ user.birth }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.country }}</td>
                <td>{{ user.city }}</td>
                <td>{{ user.registration_time }}</td>
                <td>
                    {% if (user.block_time) %}
                        <div id="{{ user.front_id }}" class="btn btn-outline-primary btn-sm" style="width: 100px" onclick="blockUser('{{ user.front_id }}', '{{ user.block_time }}')">Unblock</div>
                    {% else %}
                        <div id="{{ user.front_id }}" class="btn btn-primary btn-sm" style="width: 100px" onclick="blockUser('{{ user.front_id }}', '{{ user.block_time }}')">Block</div>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <script>
       function blockUser(id, block_time) {
            const is_ban = Number(!block_time);
            const btn = $(`#${id}`);

            if (is_ban) {
                btn.text('Unblock');
                btn.removeClass('btn-primary');
                btn.addClass('btn-outline-primary');
            } else {
                btn.text('Block');
                btn.removeClass('btn-outline-primary');
                btn.addClass('btn-primary');
            }

           $.ajax({
               url: '/admin/ban',
               method: 'post',
               data: {
                   front_id: id,
                   is_ban: is_ban
               }
           });
       }
    </script>
{% endblock %}