<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="collapse navbar-collapse container" id="navbarNavDropdown">
            <ul class="navbar-nav">
                {% if config.is_logged %}
                    <li class="nav-item">
                        <a class="nav-link {% if config.section == 'profile' %}active{% endif %}" href="/">Home</a>
                    </li>

                    <li class="nav-item pull-right">
                        <a class="nav-link {% if config.section == 'files' %}active{% endif %}" href="/files">Search</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link {% if config.section == 'logout' %}active{% endif %}" href="/logout?is_admin=1">Logout</a>
                    </li>
                {% else %}
                    <li class="nav-item pull-right">
                        <a class="nav-link {% if config.section == 'login' %}active{% endif %}" href="/login">Login</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link {% if config.section == 'register' %}active{% endif %}" href="/register">Register</a>
                    </li>
                {% endif %}

            </ul>
        </div>
    </nav>
</header>